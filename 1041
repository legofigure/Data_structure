#include <stdio.h>

int main() {
    int N;
    int score[6];
    long long ans=0;
    int min,temp;
    long long side3,side2,side1;
    
    scanf("%d",&N);
    
    for(int i=0;i<6;i++){
        scanf("%d",&score[i]);
    }

    for(int i=0;i<6;i++){
        min=i;
        for(int j=i+1;j<6;j++){
            if(score[j]<score[min]){
                min=j;
            }
        }
        temp=score[i];
        score[i]=score[min];
        score[min]=temp;
    }

    if(N==1){
        for(int i=0;i<5;i++){
            ans+=score[i];
        }
        printf("%lld",ans);
    }
    else{
        for(int i=0;i<3;i++){
            side3+=score[i];
        }
        side3*=4;

        for(int i=0;i<2;i++){
            side2+=score[i];
        }
        side2*=(8*(N-2)+4);
        side1=score[0]*(5*(N-2)*(N-2)+(N-2)*4);
        ans+=side3+side2+side1;
        printf("%lld",ans);
    }
    
    return 0;
}
