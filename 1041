#include <stdio.h>

int main() {
    long long N;
    long long score[6];
    long long ans=0;
    long long min,temp;
    long long side3,side2,side1;
    
    scanf("%lld",&N);
    
    for(int i=0;i<6;i++){
        scanf("%lld",&score[i]);
    }

    for(int i=0;i<6;i++){
        min=i;
        for(int j=i+1;j<6;j++){
            if(score[j]<score[min]){
                min=j;
            }
        }
        temp=score[i];
        score[i]=score[min];
        score[min]=temp;
    }

    if(N==1){
        for(int i=0;i<5;i++){
            ans+=score[i];
        }
        printf("%lld",ans);
    }
    else{
        for(int i=0;i<3;i++){
            side3+=score[i];
        }
        side3*=4;

        for(int i=0;i<2;i++){
            side2+=score[i];
        }
        side2*=(8*N-12);
        
        side1=score[0]*((5*N-6)*(N-2));
        
        ans=side3+side2+side1;
        printf("%lld",ans);
    }
    
    return 0;
}
